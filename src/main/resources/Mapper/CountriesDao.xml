<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stephenhu.artistichorizons.dao.CountriesDao">
    <resultMap id="BaseResultMap" type="com.stephenhu.artistichorizons.pojo.Countries">
        <id property="countryId" column="country_id"/>
        <result property="countryName" column="country_name"/>
        <result property="description" column="description"/>
        <result property="dateTime" column="date_time"/>
        <result property="isDel" column="is_del"/>
    </resultMap>

    <insert id="insert">
        insert into t_countries(country_id,country_name,description,date_time)
        values(#{countryId},#{countryName},#{description},now())
    </insert>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT country_id,
               country_name,
               description,
               date_time,
               is_del
        FROM t_countries
        WHERE country_id != 0
          AND is_del = 1
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT country_id,
               country_name,
               description,
               date_time,
               is_del
        FROM t_countries
        WHERE country_id = #{countryId}
          AND is_del = 1
    </select>

    <delete id="delById">
        UPDATE t_countries
        SET is_del = 0
        WHERE country_id = #{countryId}
    </delete>

    <update id="rollbackById">
        UPDATE t_countries
        SET is_del = 1
        WHERE country_id = #{countryId}
    </update>

    <select id="findRepeat" parameterType="map" resultMap="BaseResultMap">
        SELECT country_name,
               is_del
        FROM t_countries
        WHERE country_name=#{countryName}
            AND is_del = 1;
    </select>

</mapper>


