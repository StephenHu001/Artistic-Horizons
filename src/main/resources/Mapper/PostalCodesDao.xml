<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stephenhu.artistichorizons.dao.PostalCodesDao">
    <resultMap id="BaseResultMap" type="com.stephenhu.artistichorizons.pojo.PostalCodes">
        <id property="postalCodeId" column="postal_code_id" jdbcType="BIGINT"/>
        <result property="postalCode" column="postal_code" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="dateTime" column="date_time" jdbcType="TIMESTAMP"/>
        <result property="isDel" column="is_del" jdbcType="INTEGER"/>
    </resultMap>
    <insert id="insert">
        insert into t_postal_codes(postal_code_id,postal_code,description,date_time)
        values(#{postalCodeId},#{postalCode},#{description},now())
    </insert>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT postal_code_id,
               postal_code,
               description,
               date_time,
               is_del
        FROM t_postal_codes
        WHERE postal_code_id != 0
          AND is_del = 1
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT postal_code_id,
               postal_code,
               description,
               date_time,
               is_del
        FROM t_postal_codes
        WHERE postal_code_id = #{postalCodeId}
          AND is_del = 1
    </select>

    <delete id="delById">
        UPDATE t_postal_codes
        SET is_del = 0
        WHERE postal_code_id = #{postalCodeId}
    </delete>

    <update id="rollbackById">
        UPDATE t_postal_codes
        SET is_del = 1
        WHERE postal_code_id = #{postalCodeId}
    </update>

    <select id="findRepeat" parameterType="map" resultMap="BaseResultMap">
        SELECT postal_code,
               is_del
        FROM t_postal_codes
        WHERE postal_code=#{postalCode}
          AND is_del = 1;
    </select>

</mapper>


