<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stephenhu.artistichorizons.dao.EventsDao">
    <resultMap id="BaseResultMap" type="com.stephenhu.artistichorizons.pojo.Events">
        <id property="eventId" column="event_id" jdbcType="BIGINT"/>
        <result property="eventName" column="event_name" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="dateTime" column="date_time" jdbcType="TIMESTAMP"/>
        <result property="isDel" column="is_del" jdbcType="INTEGER"/>
    </resultMap>
    <insert id="insert">
        insert into t_events(event_id,event_name,description,date_time)
        values(#{eventId},#{eventName},#{description},now())
    </insert>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT event_id,
               event_name,
               description,
               date_time,
               is_del
        FROM t_events
        WHERE event_id != 0
          AND is_del = 1
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT event_id,
               event_name,
               description,
               date_time,
               is_del
        FROM t_events
        WHERE event_id = #{eventId}
          AND is_del = 1
    </select>

    <delete id="delById">
        UPDATE t_events
        SET is_del = 0
        WHERE event_id = #{eventId}
    </delete>

    <update id="rollbackById">
        UPDATE t_events
        SET is_del = 1
        WHERE event_id = #{eventId}
    </update>

    <select id="findRepeat" parameterType="map" resultMap="BaseResultMap">
        SELECT event_name,
               is_del
        FROM t_events
        WHERE event_name=#{eventName}
          AND is_del = 1;
    </select>

</mapper>


